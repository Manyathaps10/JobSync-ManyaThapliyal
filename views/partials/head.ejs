<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- SEO Meta Tags -->
    <title><%= pageTitle || "JobSync - Find Your Dream Job" %></title>
    <meta name="description" content="JobSync is an eco-friendly job search platform that helps you find jobs efficiently while saving energy.">
    <meta name="keywords" content="jobs, job search, eco-friendly jobs, green careers, JobSync">
    <meta name="author" content="JobSync Team">

    <!-- Eco-Friendly Theme Color for Browsers -->
    <meta name="theme-color" content="#2E7D32">

    <!-- Open Graph for Social Sharing -->
    <meta property="og:title" content="JobSync - Eco-Friendly Job Search">
    <meta property="og:description" content="Search and apply for jobs while promoting sustainability.">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://jobsync.example.com">
    <meta property="og:image" content="https://jobsync.example.com/images/preview.png">

    <!-- Google Custom Search Engine (Async Load) -->
    <script async src="https://cse.google.com/cse.js?cx=73c55d547f88f40ed"></script>

    <!-- Styles -->
    <link rel="stylesheet" href="/css/style.css">

    <!-- Structured Data for SEO (Job Posting Example) -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "JobSync",
        "url": "https://jobsync.example.com",
        "logo": "https://jobsync.example.com/images/logo.png",
        "sameAs": [
            "https://www.facebook.com/jobsync",
            "https://twitter.com/jobsync"
        ]
    }
    </script>
</head>